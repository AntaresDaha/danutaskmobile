.x-toolbar-light {
  background-image: none;
  background-color: $base-color-lightdark;
  background-image: -webkit-gradient(linear, 50% 0%, 50% 100%, color-stop(0%, desaturate(lighten($base-color-lightdark, 30%), 15%)), color-stop(3%, desaturate(lighten($base-color-lightdark, 5%), 5%)), color-stop(100%, saturate(darken($base-color-lightdark, 15%), 15%)));
  background-image: -webkit-linear-gradient(top, desaturate(lighten($base-color-lightdark, 25%), 15%),desaturate(lighten($base-color-lightdark, 5%), 5%) 3%,saturate(darken($base-color-lightdark, 15%), 15%));
  background-image: linear-gradient(top, desaturate(lighten($base-color-lightdark, 25%), 15%),desaturate(lighten($base-color-lightdark, 5%), 5%) 3%,saturate(darken($base-color-lightdark, 15%), 15%));
  border-color: black;
  border-top: black;
  color: $base-fontcolor-dark;
}
.x-toolbar-light .x-title .x-innerhtml{
  color: $base-fontcolor-dark !important;
}

/**
 * Cusotm css for the Carousel example
 */

.x-carousel-indicator > * {
  background-position: center center;
}

.x-carousel {
  background-position: center center;
  background-size: auto 100%;
  background-color: white;

}

.x-carousel-indicator > * {
  background-color: saturate(darken($base-color, 30%), 30%) !important;
  opacity: 0.4;
}

.x-carousel-indicator > .x-carousel-indicator-active {
  opacity: 1;
}

// LOGIN
.loginTextField input {
  color: #333;
  text-shadow: rgba(255, 255, 255, 0.25) 0 0.08em 0;
  background-color: whitesmoke;
}
.loginTextField .x-clear-icon {
  background-color: whitesmoke; // = color around clearicon
}

.loginTextField.x-field {
  background: transparent;
  background-color: transparent;
}

.loginTextField .x-field-input{
  border: 2px outset $base-color;
}
.loginTextField .x-input-el{
  border-right: 2px outset $base-color;
}

.loginCheckBoxField{
  background-color: transparent;
  background-image: linear-gradient(top, transparent, transparent 30%, transparent 65%, transparent);
  border: 2px outset $base-color;
}

.loginCheckBoxField .x-component-outer{
  width: 72px;
  /* background-color: #FFFFFF; */
  background-color: whitesmoke;
  background-image: linear-gradient(top, #FFFFFF, #FFFFFF 30%, #FFFFFF 65%, #FFFFFF);

}

.loginCheckBoxField .x-form-label {
  background-color: transparent;
  background-image: linear-gradient(top, transparent, transparent 30%, transparent 65%, transparent);
  color: white;
  font-size: 18px;
}

.loginCheckBoxField .x-input-el {
  left: -10px;
}
